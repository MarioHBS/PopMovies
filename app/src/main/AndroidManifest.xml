<?xml version="1.0" encoding="utf-8"?>
<manifest
	package="br.com.mario.popmovies"
	xmlns:android="http://schemas.android.com/apk/res/android"
	>

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<application
		android:name=".PopMoviesApp"
		android:allowBackup="true"
		android:icon="@drawable/film_reel"
		android:label="@string/app_name"
		android:logo="@drawable/film_reel"
		android:theme="@style/AppTheme"
		>

		<activity
			android:name=".screens.MainActivity"
			android:launchMode="singleTop"
			>
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".screens.DetailActivity"
			android:label="@string/title_activity_detail"
			android:parentActivityName=".screens.MainActivity"
			android:theme="@style/AppTheme.NoActionBar"
			>
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="br.com.mario.popmovies.screens.MainActivity"
			/>
		</activity>
		<activity
			android:name=".screens.SearchActivity"
			android:parentActivityName=".screens.MainActivity"
			>
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="br.com.mario.popmovies.screens.MainActivity"
			/>
			<intent-filter>
				<action android:name="android.intent.action.SEARCH"/>
			</intent-filter>
			<meta-data
				android:name="android.app.searchable"
				android:resource="@xml/searchable"
			/>
		</activity>
	</application>

</manifest>